PROGRAM EXERICIC1

    
IMPLICIT NONE

INTEGER*4 SEED, I, NRAND
REAL*8 X, SUM ,SUM2, SIGMA, GENRAND_REAL2

SEED = 541766
NRAND = 40000

CALL INIT_GENRAND(SEED)

SUM=0.D0
SUM2=0.D0

DO I = 1, NRAND
    X = GENRAND_REAL2()
    WRITE(*,*) I,X
    SUM = SUM + X
    SUM2 = SUM2 + X*X

ENDDO

SUM = SUM/REAL(NRAND)
SUM2 = SUM2/REAL(NRAND)

SIGMA = DSQRT(SUM2-SUM*SUM)

WRITE(*,*) SUM, SIGMA 

STOP

END PROGRAM 